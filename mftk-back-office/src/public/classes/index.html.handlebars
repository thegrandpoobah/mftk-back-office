<div class="panel panel-default">
  <div class="panel-heading clearfix">
    <div class="pull-right">
      <a class="btn btn-default btn-sm aviator" href="/admin/classes/new/" role="button">Create</a>
    </div>
    Classes
  </div>
  <table class="table">
    <thead>
      <tr>
        <th>Class Name</th>
        <th>Day of the Week</th>
        <th>Start Time</th>
        <th>End Time</th>
        <th></th>
      </tr>
    </thead>
    <tbody class="table-hover">
      {{#data}}
        <tr>
          <td>{{name}}</td>
          <td>{{dayOfTheWeek}}</td>
          <td>{{startTime}}</td>
          <td>{{endTime}}</td>
          <td>
            <a class="btn btn-default btn-xs aviator" href="/admin/classes/{{id}}/edit/" role="button">Edit</a>
            <a class="btn btn-danger btn-xs aviator" href="/admin/classes/{{id}}/delete/" role="button">Delete</a>
          </td>
        </tr>
      {{/data}}
    </tbody>
  </table>
</div>
