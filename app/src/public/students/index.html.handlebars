<div class="panel panel-default">
  <div class="panel-heading clearfix">
    <div class="pull-right">
      <a class="btn btn-default btn-sm aviator" href="/admin/students/new/" role="button">Create</a>
    </div>
    Students ({{activeCounter data}} Active)
  </div>
  <table class="table">
    <thead>
      <tr>
        <th>Student Name</th>
        <th>Active</th>
        <th>Age (Date of Birth)</th>
        <th>Rank (Last Promoted)</th>
        <th>Roles</th>
        <th>Account</th>
        <th></th>
      </tr>
    </thead>
    <tbody class="table-hover">
      {{#data}}
        <tr>
          <td>{{firstName}} {{lastName}}</td>
          <td>
            {{#active}}
              <i class="fa fa-check" aria-hidden="true"></i>
            {{/active}}
            {{^active}}
              <i class="fa fa-times" aria-hidden="true"></i>
            {{/active}}
          </td>
          <td>{{age dateOfBirth}} old ({{date dateOfBirth format="L"}})</td>
          <td>{{ranks.[0].rank}} ({{age ranks.[0].promotedOn}} ago)</td>
          <td>
            {{#roles}}
              {{#if @last}}
                {{.}}
              {{^}}
                {{.}}, 
              {{/if}}
            {{/roles}}</td>
          <td>
            {{#account.contacts.[0]}}
              <a class="aviator" href="/admin/accounts/{{accountId}}/edit/">{{firstName}} {{lastName}}</a>
            {{/account.contacts.[0]}}
          </td>
          <td class="text-right">
            <div class="btn-group">
              <a class="btn btn-default btn-xs aviator" href="/admin/students/{{id}}/edit/" role="button">Edit</a>
              <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <span class="caret"></span>
                <span class="sr-only">Toggle Dropdown</span>
              </button>
              <ul class="dropdown-menu dropdown-menu-right">
                <li><a class="aviator" href="/admin/students/{{id}}/attendance/">View Attendance</a></li>
                <li><a class="aviator" href="/admin/students/{{id}}/notes/">View Notes</a></li>
                <li><a class="aviator" href="/admin/students/{{id}}/ranks/">Promotion History</a></li>
                <li role="separator" class="divider"></li>
                <li><a class="aviator" href="/admin/students/{{id}}/delete/">Delete</a></li>
              </ul>
            </div>
          </td>
        </tr>
      {{/data}}
      {{^data}}
        <td colspan="7">No students found</td>
      {{/data}}
    </tbody>
  </table>
</div>
