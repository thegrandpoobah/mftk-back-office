<div class="panel panel-default">
  <div class="panel-heading clearfix">
    <div class="pull-right">
      <a class="btn btn-default btn-sm aviator" href="/admin/classes/new/" role="button">Create</a>
    </div>
    Classes
  </div>
  <table class="table">
    <thead>
      <tr>
        <th>Class Name</th>
        <th>Types</th>
        <th>Day of the Week</th>
        <th>Start Time</th>
        <th>End Time</th>
        <th></th>
      </tr>
    </thead>
    <tbody class="table-hover">
      {{#data}}
        <tr>
          <td>
            {{name}}
          </td>
          <td>
            {{#types}}
              {{#if @last}}
                {{.}}
              {{^}}
                {{.}}, 
              {{/if}}
            {{/types}}
          </td>
          <td>{{dayOfTheWeek}}</td>
          <td>{{time startTime}}</td>
          <td>{{time endTime}}</td>
          <td class="text-right">
            <div class="btn-group">
              <a class="btn btn-default btn-xs aviator" href="/admin/classes/{{id}}/edit/" role="button">Edit</a>
              <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <span class="caret"></span>
                <span class="sr-only">Toggle Dropdown</span>
              </button>
              <ul class="dropdown-menu dropdown-menu-right">
                <li><a class="aviator" href="/admin/classes/{{id}}/delete/">Delete</a></li>
              </ul>
            </div>
          </td>
        </tr>
      {{/data}}
      {{^data}}
        <td colspan="5">No classes found</td>
      {{/data}}
    </tbody>
  </table>
</div>
