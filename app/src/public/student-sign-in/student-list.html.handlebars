<div class="panel panel-default">
  <div class="panel-heading clearfix">
    Signed In Students ({{length}} signed in)
  </div>
  <table class="table">
    <thead>
      <tr>
      	<th>Student</th>
        <th>Sign in Time</th>
        <th>Status</th>
        <th></th>
      </tr>
    </thead>
    <tbody class="table-hover">
      {{#.}}
        <tr>
          <td><a href="/admin/students/{{student.id}}/attendance/" class="aviator">{{student.firstName}} {{student.lastName}}</a></td>
          <td>{{date signInTime format="h:mma"}}</td>
          <td>{{status}}</td>
          <td class="text-right"><a href="/student-sign-in/{{id}}/delete/" class="aviator btn btn-default btn-xs">Delete</a></td>
        </tr>
      {{/.}}
      {{^.}}
        <td colspan="4">No students signed in yet.</td>
      {{/.}}
    </tbody>
  </table>
</div>